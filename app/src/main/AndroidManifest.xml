<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.example.lorinczpeter94.chainreaction2">

    <uses-permission android:name="android.permission.VIBRATE"/>

    <application
            android:allowBackup="true"
            android:icon="@drawable/game_launch_icon"
            android:label="@string/app_name"
            android:roundIcon="@drawable/game_launch_icon"
            android:supportsRtl="true"
            android:theme="@style/AppTheme">
        <activity android:name=".welcome_activity.WelcomeActivity"
                    android:screenOrientation="locked">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".gameActivity.SmallGameActivity"
                  android:screenOrientation="locked">
        </activity>
        <activity android:name=".gameActivity.MediumGameActivity"
                  android:screenOrientation="locked">
        </activity>
        <activity android:name=".gameActivity.LargeGameActivity"
                  android:screenOrientation="locked">
        </activity>
    </application>

</manifest>